<div class="row">
  <div class="col-md-12">
    <%= form_for(RecipeIngredient.new, :html => {class: "form-horizontal", multipart: true, role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :quantity %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :quantity, class: "form-control", placeholder: "Serving Size", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-4 col-md-offset-4">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Return to recipes listing", recipes_path %> ]
    </div>
  </div>

