<% if @recipe.errors.any? %>
    <%= pluralize(@recipe.errors.count, "error") %>
    <ol>
    <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ol>
<% end %>
        <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-md-2">
                <%= f.label :name %>
                </div>
                <div class="col-md-8">
                <%= f.text_field :name, class: "form-control", placeholder: "Name of your recipe", autofocus: true %>
                </div>
                </div>
            <div class="form-group">
            <div class="control-label col-md-2">
                <%= f.label :description %>
            </div>
            <div class="col-md-8">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Describe how to create your recipe" %>
            </div>
            </div>

            <div class="form-group">
            <div class="row">
            <div class="col-md-offset-2 col-md-8">
            <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
            </div>
            </div>
            </div>
            <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <%= f.submit class: "btn btn-primary btn-lg" %>
                </div>
                </div>
                <% end %>
            <div class="col-md-offset-2 col-md-8">
            [ <%= link_to "Return to recipes", recipes_path %> ]
        </div>
</div>