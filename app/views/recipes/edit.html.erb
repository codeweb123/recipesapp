<h1>Edit an existing recipe</h1>
<% if @recipe.errors.any? %>
    <%= pluralize(@recipe.errors.count, "error") %>
    <ol>
    <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ol>
<% end %>
<div class="row">
    <div class="col-md-12">
        <%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-md-2">
                <%= f.label :name %>
                </div>
                <div class="col-md-8">
                <%= f.text_field :name, class: "form-control", placeholder: "Name of recipe", autofocus: true %>
                </div>
                </div>
            <div class="form-group">
            <div class="control-label col-md-2">
                <%= f.label :description %>
            </div>
            <div class="col-md-8">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Steps to create your recipe" %>
            </div>
            </div>
            <div class="form-group">
            <div class="col-md-2">
                <%= f.submit class: "btn btn-primary btn-lg" %>
                </div>
                </div>
        <% end %>
        <div class="col-md-4 col-md-4">
            [ <%= link_to "Return to recipes", recipes_path %>]

    </div>
</div>