<h1>Recipe Name: <%= @recipe.name.capitalize %></h1>
  <br>
  <br>
<div class= "col-md-12">
    <h2 class="description"> Directions: </h2>
    
    <hr />
    
      <%= @recipe.description %>
        <br>
        <br>
    <h2>Ingredients:</h2>
    
    <hr />
    
    <h4><%= render @recipe.ingredients %></h4>
      <br>
      <br>
    <h2>Created by:</h2>
    
    <hr />
    
    <h4><%= @recipe.user.username %></h4>
</div>

<div class= "col-md-12">
  <div class="recipe-actions">
    <% if logged_in? && (current_user == @recipe.user || current_user.admin?) %>
      <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "btn btn-xs btn-info" %>
      <%= link_to "Delete this recipe", recipe_path(@recipe), method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }, class: "btn btn-xs btn-danger" %>
    <% end %>
  
  <%= link_to "Create a Comment", new_recipe_comment_path(@recipe), class: "btn btn-xs btn-success" %>                                 
  <%= link_to "Return to recipes listing", recipes_path, class: "btn btn-xs btn-warning" %>
  
  </div>
</div>
 


