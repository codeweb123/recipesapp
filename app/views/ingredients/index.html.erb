<h1 align="center">All Ingredients</h1>
<div align="center">
<%= will_paginate %>
<% @ingredients.each do |ing| %>
    <ul class="listing">
        <div class="row">
            <div class="col-md-12">
            <li class="user-title"><%= link_to ing.name.capitalize, ingredient_path(ing) %></li>
            <li><%= pluralize(ing.recipes.count, "recipe") if ing.recipes %>
            <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Edit this ingredient", edit_ingredient_path(ing) %></li>
            <% end %>
            </div>
        </div>
    </ul>
<% end %>
<%= will_paginate %>
</div>